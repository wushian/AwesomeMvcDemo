    <br />
    @(Html.Awe().Grid("MealsGrid2")
          .Url(Url.Action("MealsGridSel"))
          .Mod(o => o.MovableRows("MealsGrid1", "MealsGrid2").ColumnsSelector())
          .Height(200)
          .Paging(false)
          .ParameterFunc("getSelected")
          .Groupable(false)
          .Columns(
              new Column { Bind = "Id", Width = 100 },
              new Column { Bind = "Name", Width = 200 },
