<h2>Simple drag and drop demo</h2>

@*begin3*@
<div class="divA">
    <p>drag source</p>
    <div class="dragItem">abc</div>
    <div class="dragItem">abc</div>
    <div class="dragItem">abc</div>
</div>
<br />
<div class="divB">
    <p>drop target</p>
</div>

<script>
    $(function () {
        var $divB = $('.divB');
        var $divA = $('.divA');

        function dropFunc($cont) {
            return function (dragObj) {
                dragObj.appendTo($cont);
            }
        }

        function hoverFunc($cont) {
            return function(){
                $cont.addClass('awe-highlight');
            }
        }

        function resetHover() {
            $divB.removeClass('awe-highlight');
            $divA.removeClass('awe-highlight');
        }

        awem.dragAndDrop({
            from: $divA,
            sel: '.dragItem',
            to: [{ c: $divB, drop: dropFunc($divB), hover: hoverFunc($divB) }],
            reshov: resetHover,
            hide: 1
        });

        awem.dragAndDrop({
            from: $divB,
            sel: '.dragItem',
            to: [{ c: $divA, drop: dropFunc($divA), hover: hoverFunc($divA) }],
            reshov: resetHover,
            hide: 1
        });
    });
</script>


<style>
    .divA, .divB {
        border: 1px solid gray;
        height: 100px;
        padding: 5px;
    }

    .dragItem {
        display: inline-block;
        background: gray;
        color: white;
        padding: 2px;
        border-radius: 2px;
        cursor: default;
        margin-right: 5px;
    }
</style>
@*end3*@
